@page "/customer-list"
<MudContainer MaxWidth="MaxWidth.Large" Class="mt-6">

    <MudText Typo="Typo.h5" GutterBottom="true">
        Customers
    </MudText>

    <MudPaper Elevation="2" Class="pa-4">

        @if (_loading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else
        {
            <MudTable Items="_customers" Hover="true" Striped="true">

                <HeaderContent>
                    <MudTh>Id</MudTh>
                    <MudTh>Full Name</MudTh>
                    <MudTh>Email</MudTh>
                    <MudTh>Actions</MudTh>
                </HeaderContent>

                <RowTemplate>
                    <MudTd>@context.Id</MudTd>
                    <MudTd>@context.FullName</MudTd>
                    <MudTd>@context.Email</MudTd>
                    <MudTd>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" StartIcon="@Icons.Material.Filled.Edit" OnClick="@(() => OpenEditCustomerDialog(context))">
                            Edit
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small" StartIcon="@Icons.Material.Filled.Delete" Class="ml-2" OnClick="@(async(e) => await DeleteCustomer(context.Id))">
                            Delete
                        </MudButton>
                    </MudTd>
                </RowTemplate>

            </MudTable>
        }

    </MudPaper>

</MudContainer>

@code {

    private List<CustomerDto> _customers = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _customers = await _apiClient.GetAllAsync<CustomerDto>("customers");
        }
        catch
        (Exception ex)
        {
            _snackbar.Add($"Error loading customers: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task DeleteCustomer(Guid customerId)
    {
        var dialogTitle = "Confirm Delete";
        var dialogMessage = "Are you sure you want to delete this customer?";
        var yesText = "Confirm";
        var cancelText = "Cancel";

        bool? confirm = await _dialogService.ShowMessageBox(dialogTitle, dialogMessage, yesText: yesText, cancelText: cancelText);

        if (confirm == true)
        {
            try
            {
                await _apiClient.DeleteAsync("customers", customerId);
                _customers.RemoveAll(c => c.Id == customerId);
                StateHasChanged();
                _snackbar.Add("Customer deleted successfully", Severity.Success);
            }
            catch (Exception ex)
            {
                _snackbar.Add($"Error deleting customer: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task OpenEditCustomerDialog(CustomerDto customer)
    {
        var parameters = new DialogParameters
        {
            { "Customer", customer }
        };

        var options = new DialogOptions { MaxWidth = MaxWidth.Small, CloseButton = true };

        await _dialogService.ShowAsync<EditCustomerDialog>("Edit Customer", parameters);
    }

}
