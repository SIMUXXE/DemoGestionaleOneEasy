@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">

    <MudPaper Elevation="2" Class="pa-6 mb-6">
        <MudText Typo="Typo.h4" GutterBottom="true">
            Welcome to Gestionale DEMO
        </MudText>

        <MudText Typo="Typo.body1" Class="mb-4">
            This application demonstrates a simple Orders and Customers management system
            built with .NET 8, Clean Architecture principles and Blazor Server.
        </MudText>

        <MudDivider Class="my-4" />

        <MudGrid>
            <MudItem xs="12" md="6">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.h6">Backend</MudText>
                    <MudText Typo="Typo.body2">
                        REST API built with Minimal APIs, structured in layered architecture
                        (Domain, Application, Infrastructure).
                    </MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudPaper Class="pa-4" Elevation="1">
                    <MudText Typo="Typo.h6">Frontend</MudText>
                    <MudText Typo="Typo.body2">
                        Blazor Server application consuming the REST API
                        with reusable components and clean structure.
                    </MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>

        <MudDivider Class="my-6" />

        <MudStack Direction="Row" Justify="Justify.Center">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Info"
                       Size="Size.Large"
                       StartIcon="@Icons.Material.Filled.Dashboard"
                       OnClick="@GoToDashboard">
                Go to Dashboard
            </MudButton>
        </MudStack>

    </MudPaper>

</MudContainer>

@code {
    private void GoToDashboard()
    {
        _navManager.NavigateTo("/dashboard");
    }
}
